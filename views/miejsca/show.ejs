<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"> Miejsca</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info1</li>
                <li class="list-group-item">Info1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="caption-full">
                        <img src='<%= miejsce.image %>' class="card-img-top rounded" alt="...">
                        <div class="card-title mt-3">
                            <h1 style="display:inline; " class="text-left"><%= miejsce.nazwa %>
                            </h1>
                            <h5 style="display:inline; float:right;" class="text-right text-muted mt-3"> od
                                <%= miejsce.cena %>z≈Ç/za noc</h5>
                        </div>
                    </div>
                    <div class="card-text">
                        <p><%= miejsce.dlugiopis %></p>
                    </div>
                </div>
                

            </div>
            <div class="card card-body bg-light mt-4 mb-4">
                <a class="btn btn-success btn-sm " href="/miejsca/<%= miejsce._id %>/komentarze/new">Dodaj nowy
                    komentarz!</a>
                    <hr>
                <% miejsce.komentarze.forEach(function(komentarz){ %>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <b><%=komentarz.autor  %>:</b>
                            <div style="display:inline; float:right;" class="text-muted ">10days ago</div>
                            <p> <%= komentarz.tekst %></p>
                        </div>
                    </div>
                    
                    <%  }) %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>