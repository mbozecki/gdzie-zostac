<%- include('./partials/header') %>

    <!-- zmienne musza nazywac się username oraz password do poprawnego dzialania passportu-->
<div class="container text-center mt-4">
    <H1>Zarejestruj się</H1>
    <div style="width:18%;  margin:4em auto;">
        <form action="/register" method="post">
            <div class="form-group">
                <input type="text" name="username" placeholder="Twój nowy login">
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Hasło">
            </div>
            <div class="form-group">
                <button class="form-control btn btn-sm btn-success"> Zarejestruj się!</button>
            </div>
        </form>
    </div>
</div>
